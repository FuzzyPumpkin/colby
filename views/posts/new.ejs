<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new post</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form method="POST" action="/posts">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="post title" name="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="video URL" name="link">
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="post text" name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/posts">Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>