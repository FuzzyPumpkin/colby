<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= post.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.name %>" name="post[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.image %>" name="post[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= post.description %>" name="post[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/posts">Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>